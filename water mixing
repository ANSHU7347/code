
#include<bits//stdc++.h>
#include <iostream>
using namespace std;

int main() {
    int t;
    cin>>t;
    while(t--){
        int a,b,x,y;
        cin>>a>>b>>x>>y;
        if(a>b){
            if(a-y<=b){
                cout<<"yes"<<endl;
            }
            else {
                cout<<"NO"<<endl;
            }
        }
            else {
                if(a+x>=b){
                    cout<<"yes"<<endl;
                }
            
                else {
                    cout<<"NO"<<endl;
                }
            }
        }
    
    return 0;
}
        
